<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.setting.SettingFragment">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gif_setting"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintBottom_toTopOf="@id/lang_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/setting" />
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/lang_card"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@+id/gif_setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/location_card"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradien"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:id="@+id/lang_text_card"
                    android:backgroundTint="@color/purple_spec"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        >

                        <ImageView

                            android:id="@+id/img_lang"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/languge"
                            app:layout_constraintBottom_toBottomOf="@id/lang_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/lang_text"
                            app:layout_constraintVertical_bias="0.666" />

                        <TextView
                            android:id="@+id/lang_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/lemon"
                            android:text="@string/languages"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/img_lang"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:transitionName="lang"
                    android:paddingStart="10dp"
                    android:weightSum="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/lang_text_card"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/arabic"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/arabic" />

                    <RadioButton
                        android:id="@+id/english"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/english" />

                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/location_card"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@+id/lang_card"
            app:layout_constraintStart_toStartOf="@+id/lang_card"
            app:layout_constraintEnd_toEndOf="@+id/lang_card"
            app:layout_constraintBottom_toTopOf="@id/temp_setting_card"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradien"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:id="@+id/loc_text_card"
                    android:backgroundTint="@color/purple_spec"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        >

                        <ImageView

                            android:id="@+id/img_loc"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/loc_setting"
                            app:layout_constraintBottom_toBottomOf="@id/location_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/location_text"
                            />

                        <TextView
                            android:id="@+id/location_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="36dp"
                            android:fontFamily="@font/lemon"
                            android:text="@string/location"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/img_loc"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.539" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <RadioGroup
                    android:id="@+id/radio_group_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:transitionName="lang"
                    android:paddingStart="10dp"
                    android:weightSum="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/loc_text_card"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/gps"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/gps" />

                    <RadioButton
                        android:id="@+id/map"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/map" />

                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/temp_setting_card"
            app:cardCornerRadius="70dp"
            app:layout_constraintTop_toBottomOf="@+id/location_card"
            app:layout_constraintStart_toStartOf="@+id/location_card"
            app:layout_constraintEnd_toEndOf="@+id/location_card"
            app:layout_constraintBottom_toTopOf="@id/notification_card"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradien"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:id="@+id/temp_text_card"
                    android:backgroundTint="@color/purple_spec"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="70dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        >

                        <ImageView

                            android:id="@+id/img_temp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/temp"
                            app:layout_constraintBottom_toBottomOf="@id/temp_setting_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/temp_setting_text"
                            app:layout_constraintEnd_toStartOf="@id/temp_setting_text"
                            />

                        <TextView
                            android:id="@+id/temp_setting_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/lemon"
                            android:text="@string/temperature"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/img_temp"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <RadioGroup
                    android:id="@+id/radio_group_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:transitionName="lang"
                    android:paddingStart="10dp"
                    android:weightSum="3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/temp_text_card"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry">

                    <RadioButton
                        android:text="@string/celsius"
                        android:id="@+id/celsius"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                    <RadioButton
                        android:text="@string/kelvin"
                        android:id="@+id/kelvin"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <RadioButton
                        android:text="@string/fahrenheit"
                        android:id="@+id/fahrenheit"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/notification_card"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@+id/temp_setting_card"
            app:layout_constraintStart_toStartOf="@+id/temp_setting_card"
            app:layout_constraintEnd_toEndOf="@+id/temp_setting_card"
            app:layout_constraintBottom_toTopOf="@id/theme_card"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradien"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:id="@+id/noti_text_card"
                    android:backgroundTint="@color/purple_spec"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        >

                        <ImageView

                            android:id="@+id/img_noti"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/notification"
                            app:layout_constraintBottom_toBottomOf="@id/notification_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/notification_text"
                            />

                        <TextView
                            android:id="@+id/notification_text"
                            android:text="@string/notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/lemon"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/img_noti"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <RadioGroup
                    android:id="@+id/radio_group_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:transitionName="lang"
                    android:paddingStart="10dp"
                    android:weightSum="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/noti_text_card"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/notify_enabled"
                        android:text="@string/enable"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                    <RadioButton
                        android:id="@+id/notify_not_enabled"
                        android:text="@string/disable"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/theme_card"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@+id/notification_card"
            app:layout_constraintStart_toStartOf="@+id/notification_card"
            app:layout_constraintEnd_toEndOf="@+id/notification_card"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradien"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:id="@+id/theme_text_card"
                    android:backgroundTint="@color/purple_spec"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        >

                        <ImageView

                            android:id="@+id/img_theme"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/theme"
                            app:layout_constraintBottom_toBottomOf="@id/theme_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/theme_text"
                            />

                        <TextView
                            android:id="@+id/theme_text"
                            android:text="@string/theme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/lemon"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/img_theme"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <RadioGroup
                    android:id="@+id/radio_group_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:transitionName="lang"
                    android:paddingStart="10dp"
                    android:weightSum="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/theme_text_card"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/theme_light"
                        android:text="@string/light"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                    <RadioButton
                        android:id="@+id/theme_dark"
                        android:text="@string/dark_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
