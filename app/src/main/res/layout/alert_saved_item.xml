<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/all_view_alert"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="60dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/orange"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/dialog_img"
            android:id="@+id/saved_alert_img"
            />

        <TextView
            android:id="@+id/from_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lemon"
            android:text="@string/from"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/saved_alert_img"
            app:layout_constraintTop_toTopOf="@id/saved_alert_img" />

        <TextView
            android:id="@+id/to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lemon"
            android:text="@string/to"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/saved_alert_img"
            app:layout_constraintTop_toBottomOf="@id/from_text" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lemon"
            android:text="@string/time"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/saved_alert_img"
            app:layout_constraintTop_toBottomOf="@id/to_text" />

        <TextView
            android:id="@+id/zone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lemon"
            android:text="@string/zone"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/saved_alert_img"
            app:layout_constraintTop_toBottomOf="@id/time_text"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/from_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/from_text"
            app:layout_constraintStart_toStartOf="@id/zone_measure"

            app:layout_constraintTop_toTopOf="@id/from_text" />

        <TextView
            android:id="@+id/to_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/to_text"
            app:layout_constraintStart_toStartOf="@id/zone_measure"
            app:layout_constraintTop_toTopOf="@id/to_text" />

        <TextView
            android:id="@+id/time_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/time_text"
            app:layout_constraintStart_toStartOf="@id/zone_measure"
            app:layout_constraintTop_toTopOf="@id/time_text" />

        <TextView
            android:id="@+id/zone_measure"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:maxEms="10"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/zone_text"
            app:layout_constraintEnd_toStartOf="@id/del_icon"
            app:layout_constraintStart_toEndOf="@id/zone_text"
            app:layout_constraintTop_toTopOf="@id/zone_text" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/delete"
            android:id="@+id/del_icon"
            />







    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>