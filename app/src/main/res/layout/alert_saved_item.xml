<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/all_view_alert"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/dialog_img"
            android:id="@+id/saved_alert_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/from_text"
            android:textSize="18sp"
            android:text="@string/from"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@id/saved_alert_img"
            app:layout_constraintStart_toEndOf="@id/saved_alert_img"
            android:textColor="@color/grey"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/to_text"
            android:textSize="18sp"
            android:text="@string/to"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/from_text"
            app:layout_constraintStart_toEndOf="@id/saved_alert_img"
            android:textColor="@color/grey"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/time_text"
            android:textSize="18sp"
            android:text="@string/time"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/to_text"
            app:layout_constraintStart_toEndOf="@id/saved_alert_img"
            android:textColor="@color/grey"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/zone_text"
            android:textSize="18sp"
            android:text="@string/zone"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/time_text"
            app:layout_constraintStart_toEndOf="@id/saved_alert_img"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/grey"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/from_measure"
            android:textSize="18sp"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@id/from_text"
            app:layout_constraintBottom_toBottomOf="@id/from_text"
            app:layout_constraintStart_toEndOf="@id/from_text"
            android:textColor="@color/purple_500"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/to_measure"
            android:textSize="18sp"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@id/to_text"
            app:layout_constraintBottom_toBottomOf="@id/to_text"
            app:layout_constraintStart_toEndOf="@id/to_text"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/time_measure"
            android:textSize="18sp"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@id/time_text"
            app:layout_constraintBottom_toBottomOf="@id/time_text"
            app:layout_constraintStart_toEndOf="@id/time_text"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/zone_measure"
            android:textSize="18sp"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@id/zone_text"
            app:layout_constraintStart_toEndOf="@id/zone_text"
            app:layout_constraintBottom_toBottomOf="@id/zone_text"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/delete"
            android:id="@+id/del_icon"
            />







    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>